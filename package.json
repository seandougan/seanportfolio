{
  "name": "seanportfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint ",
    "production": "next lint && next build",
    "prettify": "prettier -w .",
    "prettycheck": "prettier -c ."
  },
  "dependencies": {
    "@next/eslint-plugin-next": "^13.1.6",
    "@next/font": "13.1.6",
    "@types/node": "18.13.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "eslint": "^8.33.0",
    "eslint-config-next": "13.1.6",
    "font-awesome": "^4.7.0",
    "jest": "^29.4.2",
    "next": "13.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.58.0",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3"
  },
  "lingt-staged": {
    "src/**/*/.{js,html.css.scss.tsx}": "next lint  && prettier --write .",
    "src/**/*/.{js}": "next lint  && prettier --write .",
    "src/**/*/.{tsx}": "next lint  && prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && prettier --write . && next lint"
    }
  }
}
